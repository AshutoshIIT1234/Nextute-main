generator client {
  provider = "prisma-client-js"
  output   = "../db/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Institute {
  id                     String    @id @default(uuid()) @db.Uuid
  institute_id           String    @unique @db.VarChar(10)
  institute_name         String    @db.VarChar(255)
  email                  String    @unique @db.VarChar(255)
  password               String    @db.VarChar(255)
  contact                String?   @db.VarChar(50)
  basic_info             Json?
  contact_details        Json?
  courses                Json?
  faculty_details        Json?
  student_achievements   Json?
  institute_achievements Json?
  facilities             Json?
  social_media           Json?
  media_gallery          Json?
  is_verified            Boolean   @default(false)
  code                   String?   @db.VarChar(10)
  code_expires_at        DateTime?
  created_at             DateTime  @default(now())
  updated_at             DateTime  @default(now()) @updatedAt
  password_reset_token   String?   @db.VarChar(255)
  password_reset_expires DateTime?
}

model Student {
  id                     String    @id @default(uuid()) @db.Uuid
  name                   String
  email                  String    @unique @db.VarChar(255)
  password               String
  gender                 String
  phone_number           String    @unique @map("phone_number")
  address                String?
  course                 String?
  date_of_birth          DateTime  @map("date_of_birth")
  is_verified            Boolean   @default(false)
  code                   String?
  created_at             DateTime  @default(now())
  updated_at             DateTime  @default(now()) @updatedAt
  code_expires_at        DateTime?
  student_id             String    @unique @db.VarChar(10)
  password_reset_token   String?   @db.VarChar(255)
  password_reset_expires DateTime?

  profileImage         String?
  bio                  String?
  languagePreference   String?
  hobbies              String[]
  learningStyle        String?
  targetExams          String[]
  attemptYear          String?
  studyMode            String?
  currentClass         String?
  careerGoal           String?
  preparationReason    String?
  studyHours           String?
  preferredTime        String?
  favoriteSubjects     String[]
  socialLinks          Json?
  studyResources       String[]
  mentorshipPreference String?
  studyGoals           Json?
  extracurriculars     String[]
  enrolledCourses      String[]
  achievements         String[]
  notifications        Json?
}

model Subscription {
  id         String   @id @default(uuid()) @db.Uuid
  email      String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
}

model Review {
  id           String   @id @default(uuid()) @db.Uuid
  email        String   @unique
  reviewerType String   @db.VarChar(50)
  rating       Int      @default(0)
  title        String   @db.VarChar(255)
  comment      String
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now()) @updatedAt
}

model Admin {
  id         String   @id @default(uuid()) @db.Uuid
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
}

model Employee {
  id              String   @id @default(uuid()) @db.Uuid
  idNo            String   @unique
  certificateNo   String?  @unique
  fullName        String
  email           String?  @unique
  phoneNumber     String?  @unique
  joiningDate     DateTime
  designation     String
  department      String
  image           String?
  certificateURL  String?
  achievementsURL String?
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now()) @updatedAt
}

model Mentor {
  id                       Int       @id @default(autoincrement())
  name                     String
  email                    String    @unique
  expertise                String
  description              String?
  image                    String?
  studentsCount            Int       @default(0) @map("students_count")
  rating                   Float     @default(4.5)
  isAvailable              Boolean   @default(true) @map("is_available")
  contactNumber            String?   @map("contact_number")
  alternativeContactNumber String?   @map("alternative_contact_number")
  gender                   String?
  dateOfBirth              DateTime? @map("date_of_birth")
  course                   String?
  instituteName            String?   @map("institute_name")
  rank                     String?
  major                    String?
  subjects                 String[]  @default([])
  createdAt                DateTime  @default(now()) @map("created_at")
  updatedAt                DateTime  @updatedAt @map("updated_at")

  @@map("mentors")
}

model Job {
  id           String   @id @default(uuid()) @db.Uuid
  job_id       String   @unique @db.VarChar(10)
  title        String   @db.VarChar(255)
  description  String
  location     String?
  type         String   @db.VarChar(50) // Full-time, Internship, etc.
  salary       String?  @db.VarChar(100)
  requirements Json?
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now()) @updatedAt
}
